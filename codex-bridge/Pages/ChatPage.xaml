<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="codex_bridge.Pages.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:codex_bridge.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:vm="using:codex_bridge.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <FontFamily x:Key="ChineseUIFont">Microsoft YaHei UI,Microsoft YaHei,Segoe UI</FontFamily>
        <SolidColorBrush x:Key="MarkdownCodeBlockBackgroundBrush" Color="#FFF6F8FA" />
        <SolidColorBrush x:Key="MarkdownCodeBlockBorderBrush" Color="#FFB6C2CF" />
        <SolidColorBrush x:Key="MarkdownCodeBlockForegroundBrush" Color="#FF000000" />
        <SolidColorBrush x:Key="MarkdownInlineCodeBackgroundBrush" Color="#FFEEF2F6" />
        <SolidColorBrush x:Key="MarkdownInlineCodeBorderBrush" Color="#FFB6C2CF" />
        <SolidColorBrush x:Key="MarkdownInlineCodeForegroundBrush" Color="#FF000000" />
        
        <!-- 无边框 TextBox 样式 -->
        <Style x:Key="BorderlessTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </Page.Resources>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Padding="16" RowSpacing="12">

        <!-- 顶部状态栏 -->
        <Border
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="12,8">
            <Grid ColumnDefinitions="Auto,Auto,*,Auto" ColumnSpacing="12">
                <Ellipse
                    x:Name="StatusIndicator"
                    Width="10"
                    Height="10"
                    Fill="{ThemeResource SystemFillColorCautionBrush}"
                    VerticalAlignment="Center" />
                <TextBlock
                    x:Name="ConnectionStatusText"
                    Grid.Column="1"
                    Text="未连接"
                    VerticalAlignment="Center"
                    Opacity="0.9" />
                <TextBlock
                    x:Name="SessionStatusText"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Opacity="0.7"
                    TextTrimming="CharacterEllipsis" />
                <HyperlinkButton
                    Grid.Column="3"
                    Content="打开设置"
                    Click="OpenSettingsButton_Click" />
            </Grid>
        </Border>

        <!-- 消息列表 -->
        <ListView
            x:Name="MessagesListView"
            Grid.Row="1"
            ItemsSource="{x:Bind Messages, Mode=OneWay}"
            SelectionMode="None"
            Padding="0,8">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0,4" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:ChatMessageViewModel">
                    <Grid>
                        <!-- 用户消息：气泡样式，右对齐 -->
                        <Border
                            Visibility="{x:Bind IsUser, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            CornerRadius="12,12,4,12"
                            Padding="14,10"
                            HorizontalAlignment="Right"
                            MaxWidth="600"
                            Margin="80,0,0,0">
                            <StackPanel Spacing="8">
                                <ScrollViewer
                                    HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled"
                                    Visibility="{x:Bind HasImages, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <ItemsControl ItemsSource="{x:Bind Images, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="8" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:ChatImageViewModel">
                                                <Border
                                                    CornerRadius="8"
                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                    BorderThickness="1">
                                                    <Image
                                                        Source="{x:Bind Bitmap, Mode=OneWay}"
                                                        Width="180"
                                                        Height="180"
                                                        Stretch="UniformToFill" />
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <TextBlock
                                    Text="{x:Bind Text, Mode=OneWay}"
                                    TextWrapping="Wrap"
                                    Visibility="{x:Bind HasText, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                            </StackPanel>
                        </Border>

                        <!-- 助手消息：左对齐，保持原有样式 -->
                        <Border
                            Visibility="{x:Bind IsAssistant, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            Padding="0,8"
                            HorizontalAlignment="Stretch">
                            <StackPanel Spacing="6">

                                <!-- Trace 展开器 -->
                                <Expander
                                    Header="{x:Bind TraceHeader, Mode=OneWay}"
                                    IsExpanded="{x:Bind IsTraceExpanded, Mode=TwoWay}"
                                    Visibility="{x:Bind HasTrace, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch">
                                    <ItemsControl ItemsSource="{x:Bind Trace, Mode=OneWay}" Margin="0,8,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:TraceEntryViewModel">
                                                <StackPanel Spacing="6" Margin="0,0,0,8">
                                                    <!-- 命令类型 -->
                                                    <Expander
                                                        IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                                                        Visibility="{x:Bind IsCommand, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Stretch">
                                                        <Expander.Header>
                                                            <StackPanel Spacing="8" Margin="0,10,0,10">
                                                                <TextBlock
                                                                    FontFamily="{StaticResource ChineseUIFont}"
                                                                    Text="{x:Bind Command, Mode=OneWay}"
                                                                    TextWrapping="Wrap"
                                                                    TextTrimming="CharacterEllipsis"
                                                                    LineHeight="22"
                                                                    LineStackingStrategy="BlockLineHeight"
                                                                    MaxLines="3" />
                                                                <TextBlock
                                                                    FontFamily="{StaticResource ChineseUIFont}"
                                                                    FontSize="12"
                                                                    Opacity="0.7"
                                                                    LineHeight="18"
                                                                    LineStackingStrategy="BlockLineHeight"
                                                                    Text="{x:Bind StatusBadge, Mode=OneWay}"
                                                                    Visibility="{x:Bind HasStatusBadge, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                                            </StackPanel>
                                                        </Expander.Header>

                                                        <ScrollViewer
                                                            MaxHeight="360"
                                                            Margin="0,4,0,0"
                                                            Visibility="{x:Bind HasOutput, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <TextBlock
                                                                FontFamily="{StaticResource ChineseUIFont}"
                                                                Text="{x:Bind Output, Mode=OneWay}"
                                                                TextWrapping="Wrap"
                                                                LineHeight="22"
                                                                LineStackingStrategy="BlockLineHeight" />
                                                        </ScrollViewer>
                                                    </Expander>

                                                    <!-- 推理类型 -->
                                                    <Expander
                                                        IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                                                        Visibility="{x:Bind IsReasoning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Stretch">
                                                        <Expander.Header>
                                                            <TextBlock
                                                                FontFamily="{StaticResource ChineseUIFont}"
                                                                Margin="0,10,0,10"
                                                                Text="{x:Bind Title, Mode=OneWay}"
                                                                TextWrapping="Wrap"
                                                                LineHeight="22"
                                                                LineStackingStrategy="BlockLineHeight" />
                                                        </Expander.Header>
                                                        <ScrollViewer MaxHeight="260" Margin="0,4,0,0">
                                                            <TextBlock
                                                                FontFamily="{StaticResource ChineseUIFont}"
                                                                Text="{x:Bind Text, Mode=OneWay}"
                                                                TextWrapping="Wrap"
                                                                LineHeight="22"
                                                                LineStackingStrategy="BlockLineHeight" />
                                                        </ScrollViewer>
                                                    </Expander>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>

                                <!-- 消息正文 -->
                                <ScrollViewer
                                    HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled"
                                    Margin="16,0,0,0"
                                    Visibility="{x:Bind HasImages, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <ItemsControl ItemsSource="{x:Bind Images, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="8" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:ChatImageViewModel">
                                                <Border
                                                    CornerRadius="8"
                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                    BorderThickness="1">
                                                    <Image
                                                        Source="{x:Bind Bitmap, Mode=OneWay}"
                                                        Width="220"
                                                        Height="220"
                                                        Stretch="UniformToFill" />
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <TextBlock
                                    FontFamily="{StaticResource ChineseUIFont}"
                                    Text="{x:Bind Text, Mode=OneWay}"
                                    TextWrapping="Wrap"
                                    Margin="16,0,0,0"
                                    Visibility="{x:Bind ShowPlainText, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                                <toolkit:MarkdownTextBlock
                                    FontFamily="{StaticResource ChineseUIFont}"
                                    Text="{x:Bind MarkdownText, Mode=OneWay}"
                                    TextWrapping="Wrap"
                                    Margin="16,0,0,0"
                                    Background="Transparent"
                                    CodeBackground="{StaticResource MarkdownCodeBlockBackgroundBrush}"
                                    CodeBorderThickness="0"
                                    CodeForeground="{StaticResource MarkdownCodeBlockForegroundBrush}"
                                    CodeFontFamily="Consolas"
                                    CodePadding="12,10,12,10"
                                    InlineCodeBackground="{StaticResource MarkdownInlineCodeBackgroundBrush}"
                                    InlineCodeBorderThickness="0"
                                    InlineCodeFontFamily="Consolas"
                                    InlineCodeForeground="{StaticResource MarkdownInlineCodeForegroundBrush}"
                                    InlineCodeMargin="2,0,2,0"
                                    InlineCodePadding="6,2,6,2"
                                    LinkClicked="MarkdownTextBlock_LinkClicked"
                                    CodeBlockResolving="MarkdownTextBlock_CodeBlockResolving"
                                    UseSyntaxHighlighting="True"
                                    Visibility="{x:Bind ShowMarkdown, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- 输入区域 -->
        <Border
            Grid.Row="2"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="8,6">
            <Grid RowDefinitions="Auto,Auto" RowSpacing="6" VerticalAlignment="Center">
                <!-- 待发送图片预览 -->
                <ScrollViewer
                    x:Name="PendingImagesScrollViewer"
                    Grid.Row="0"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled"
                    Visibility="Collapsed">
                    <ItemsControl ItemsSource="{x:Bind PendingImages, Mode=OneWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:ChatImageViewModel">
                                <Grid>
                                    <Border
                                        CornerRadius="8"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1">
                                        <Image
                                            Source="{x:Bind Bitmap, Mode=OneWay}"
                                            Width="64"
                                            Height="64"
                                            Stretch="UniformToFill" />
                                    </Border>

                                    <Button
                                        Width="24"
                                        Height="24"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,-6,-6,0"
                                        Click="RemovePendingImage_Click"
                                        Tag="{x:Bind DataUrl}"
                                        ToolTipService.ToolTip="移除">
                                        <SymbolIcon Symbol="Cancel" />
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- 输入与操作 -->
                <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="4">
                    <TextBox
                        x:Name="PromptTextBox"
                        AcceptsReturn="True"
                        PlaceholderText="输入消息（Enter 发送，Shift+Enter 换行，可粘贴图片）"
                        TextWrapping="Wrap"
                        MaxHeight="150"
                        Style="{StaticResource BorderlessTextBoxStyle}"
                        KeyDown="PromptTextBox_KeyDown"
                        Paste="PromptTextBox_Paste" />

                    <Button
                        Grid.Column="1"
                        Width="40"
                        Height="36"
                        Padding="0"
                        VerticalAlignment="Bottom"
                        Click="AddImageButton_Click"
                        ToolTipService.ToolTip="添加图片">
                        <SymbolIcon Symbol="Pictures" />
                    </Button>

                    <Button
                        x:Name="SendButton"
                        Grid.Column="2"
                        Width="40"
                        Height="36"
                        Padding="0"
                        VerticalAlignment="Bottom"
                        Click="SendButton_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        ToolTipService.ToolTip="发送消息">
                        <SymbolIcon Symbol="Send" />
                    </Button>
                    <Button
                        x:Name="CancelButton"
                        Grid.Column="2"
                        Width="40"
                        Height="36"
                        Padding="0"
                        VerticalAlignment="Bottom"
                        Click="CancelButton_Click"
                        Visibility="Collapsed"
                        ToolTipService.ToolTip="取消当前任务">
                        <SymbolIcon Symbol="Cancel" />
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- 设置栏 -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto" ColumnSpacing="12" VerticalAlignment="Center">
            <StackPanel
                Orientation="Horizontal"
                Spacing="8"
                HorizontalAlignment="Left">

            <!-- 工作区设置 -->
            <DropDownButton x:Name="WorkspaceButton" ToolTipService.ToolTip="工作区设置">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE8B7;" FontSize="14" />
                    <TextBlock x:Name="WorkspaceText" Text="未选择" VerticalAlignment="Center" FontFamily="{StaticResource ChineseUIFont}" />
                </StackPanel>
                <DropDownButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="WorkspaceOpenInExplorerMenuItem" Text="在资源管理器中打开" Click="WorkspaceOpenInExplorer_Click" IsEnabled="False" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="重新选择..." Click="WorkspaceReselect_Click" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutSeparator x:Name="WorkspaceRecentSeparator" />
                        <MenuFlyoutItem x:Name="WorkspaceRecentHeaderMenuItem" Text="最近使用" IsEnabled="False" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem x:Name="RecentWorkspace1MenuItem" Click="RecentWorkspace_Click" Visibility="Collapsed" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem x:Name="RecentWorkspace2MenuItem" Click="RecentWorkspace_Click" Visibility="Collapsed" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem x:Name="RecentWorkspace3MenuItem" Click="RecentWorkspace_Click" Visibility="Collapsed" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem x:Name="RecentWorkspace4MenuItem" Click="RecentWorkspace_Click" Visibility="Collapsed" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem x:Name="RecentWorkspace5MenuItem" Click="RecentWorkspace_Click" Visibility="Collapsed" FontFamily="{StaticResource ChineseUIFont}" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>

            <!-- 沙箱模式 -->
            <DropDownButton x:Name="SandboxButton" ToolTipService.ToolTip="沙箱模式">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE71C;" FontSize="14" />
                    <TextBlock x:Name="SandboxText" Text="默认" VerticalAlignment="Center" FontFamily="{StaticResource ChineseUIFont}" />
                </StackPanel>
                <DropDownButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="默认" Click="SandboxOption_Click" Tag="" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="read-only" Click="SandboxOption_Click" Tag="read-only" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="workspace-write" Click="SandboxOption_Click" Tag="workspace-write" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="danger-full-access" Click="SandboxOption_Click" Tag="danger-full-access" FontFamily="{StaticResource ChineseUIFont}" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>

            <!-- 批准策略 -->
            <DropDownButton x:Name="ApprovalButton" ToolTipService.ToolTip="批准策略">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE8FB;" FontSize="14" />
                    <TextBlock x:Name="ApprovalText" Text="默认" VerticalAlignment="Center" FontFamily="{StaticResource ChineseUIFont}" />
                </StackPanel>
                <DropDownButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="默认" Click="ApprovalOption_Click" Tag="" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="untrusted" Click="ApprovalOption_Click" Tag="untrusted" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="on-request" Click="ApprovalOption_Click" Tag="on-request" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="on-failure" Click="ApprovalOption_Click" Tag="on-failure" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="never" Click="ApprovalOption_Click" Tag="never" FontFamily="{StaticResource ChineseUIFont}" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>

            <!-- 模型 -->
            <DropDownButton x:Name="ModelButton" ToolTipService.ToolTip="模型">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE99A;" FontSize="14" />
                    <TextBlock x:Name="ModelText" Text="默认" VerticalAlignment="Center" FontFamily="{StaticResource ChineseUIFont}" />
                </StackPanel>
                <DropDownButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="默认" Click="ModelOption_Click" Tag="" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="gpt-5.2" Click="ModelOption_Click" Tag="gpt-5.2" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="gpt-5.2-codex" Click="ModelOption_Click" Tag="gpt-5.2-codex" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="gpt-5.1-codex-max" Click="ModelOption_Click" Tag="gpt-5.1-codex-max" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="gpt-5.1-codex-mini" Click="ModelOption_Click" Tag="gpt-5.1-codex-mini" FontFamily="{StaticResource ChineseUIFont}" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>

            <!-- 思考程度 -->
            <DropDownButton x:Name="ThinkingButton" ToolTipService.ToolTip="思考程度">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE945;" FontSize="14" />
                    <TextBlock x:Name="ThinkingText" Text="默认" VerticalAlignment="Center" FontFamily="{StaticResource ChineseUIFont}" />
                </StackPanel>
                <DropDownButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="默认" Click="ThinkingOption_Click" Tag="" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="low" Click="ThinkingOption_Click" Tag="low" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="medium" Click="ThinkingOption_Click" Tag="medium" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="high" Click="ThinkingOption_Click" Tag="high" FontFamily="{StaticResource ChineseUIFont}" />
                        <MenuFlyoutItem Text="xhigh" Click="ThinkingOption_Click" Tag="xhigh" FontFamily="{StaticResource ChineseUIFont}" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            </StackPanel>

            <HyperlinkButton
                x:Name="StatusButton"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Click="StatusButton_Click"
                ToolTipService.ToolTip="上下文用量"
                Padding="0"
                MinWidth="0"
                MinHeight="0"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}">
                <HyperlinkButton.Content>
                    <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                        <TextBlock
                            x:Name="StatusButtonText"
                            Text="-%"
                            VerticalAlignment="Center"
                            Foreground="{Binding Foreground, ElementName=StatusButton}" />
                        <Grid Width="14" Height="14" VerticalAlignment="Center" Margin="0,2,0,0">
                            <Ellipse
                                x:Name="StatusButtonRingTrack"
                                Stroke="{ThemeResource CardStrokeColorDefaultBrush}"
                                StrokeThickness="2"
                                Opacity="0.4" />
                            <Path
                                x:Name="StatusButtonRingArc"
                                Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                StrokeThickness="2"
                                StrokeStartLineCap="Round"
                                StrokeEndLineCap="Round" />
                            <Ellipse
                                x:Name="StatusButtonRingFull"
                                Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                StrokeThickness="2"
                                Visibility="Collapsed" />
                        </Grid>
                    </StackPanel>
                </HyperlinkButton.Content>
                <FlyoutBase.AttachedFlyout>
                    <Flyout x:Name="StatusFlyout">
                        <StackPanel Padding="14,12" Spacing="12" Language="zh-Hans">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="CharacterSpacing" Value="40" />
                                    <Setter Property="LineHeight" Value="22" />
                                    <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
                                </Style>
                            </StackPanel.Resources>

                            <TextBlock x:Name="StatusBackendConnectionText" Text="后端连接: 不可用" />

                            <StackPanel x:Name="StatusFiveHourSection" Spacing="6" Visibility="Collapsed">
                                <TextBlock x:Name="StatusFiveHourText" Text="5h限额: 不可用" />
                                <ProgressBar x:Name="StatusFiveHourProgress" Minimum="0" Maximum="100" Height="6" IsIndeterminate="True" />
                            </StackPanel>

                            <StackPanel x:Name="StatusWeeklySection" Spacing="6" Visibility="Collapsed">
                                <TextBlock x:Name="StatusWeeklyText" Text="周限额: 不可用" />
                                <ProgressBar x:Name="StatusWeeklyProgress" Minimum="0" Maximum="100" Height="6" IsIndeterminate="True" />
                            </StackPanel>

                            <TextBlock x:Name="StatusContextUsageText" Text="上下文用量: 不可用" />
                        </StackPanel>
                    </Flyout>
                </FlyoutBase.AttachedFlyout>
            </HyperlinkButton>
        </Grid>
    </Grid>
</Page>
